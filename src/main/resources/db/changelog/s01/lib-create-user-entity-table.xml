<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">


    <changeSet id="lib-create-user-entity-table" author="donald amagana">
        <createTable tableName="user_entity">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="username" type="VARCHAR(100)">
                <constraints nullable="false" unique="true"/>
            </column>

            <column name="code" type="VARCHAR(50)"/>

            <column name="first_name" type="VARCHAR(100)"/>

            <column name="last_name" type="VARCHAR(100)"/>

            <column name="full_name" type="VARCHAR(200)"/>

            <column name="phone_number" type="VARCHAR(30)"/>

            <column name="job_title" type="VARCHAR(100)"/>

            <column name="hierarchy_department" type="VARCHAR(100)"/>

            <column name="password_hash" type="VARCHAR(60)">
                <constraints nullable="false"/>
            </column>

            <column name="email" type="VARCHAR(254)">
                <constraints unique="true"/>
            </column>

            <column name="lang_key" type="VARCHAR(10)"/>

            <column name="image_url" type="VARCHAR(256)"/>

            <!-- Relations ManyToOne -->
            <column name="department_id" type="BIGINT"/>

            <column name="service_id" type="BIGINT"/>

            <column name="created_by" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="created_date" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="last_modified_by" type="VARCHAR(50)"/>
            <column name="last_modified_date" type="TIMESTAMP"/>
            <column name="status" type="VARCHAR(30)">
                <constraints nullable="false"/>
            </column>
            <column name="version" type="INT">
                <constraints nullable="false"/>
            </column>

        </createTable>

    </changeSet>


</databaseChangeLog>